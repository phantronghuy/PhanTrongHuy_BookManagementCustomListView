<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_span="2"
            android:gravity="center"
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="QUẢN LÝ SÁCH"
            android:textColor="#1E88E5"
            android:textSize="24sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtTitleMaSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MÃ SÁCH" />

        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/edtMaSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtTitleTenSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÊN SÁCH" />

        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/edtTenSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtTitleTacGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÁC GIẢ" />

        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/edtTacGia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTitleNamXb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NĂM XUẤT BẢN" />

        <EditText
            android:id="@+id/edtNamXb"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SỐ LƯỢNG" />

        <EditText
            android:id="@+id/edtSoLuong"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />
    </TableRow>
    </TableLayout>
   <TableRow
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <Button
           android:layout_marginLeft="2dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/btnAdd"
           android:text="thêm"
           android:textSize="10dp"
           ></Button>
       <Button
           android:layout_marginLeft="2dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/btnQuery"
           android:textSize="10dp"
           android:text="query"></Button>
       <Button
           android:layout_marginLeft="2dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/btnDelete"
           android:textSize="10dp"
           android:text="Xóa"
           ></Button>
       <Button
           android:layout_marginLeft="2dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/btnUpdate"
           android:textSize="10dp"
           android:text="update"
           ></Button>
   </TableRow>
</LinearLayout>